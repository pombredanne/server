<%- @page_title = "Packages" %>
<%- if @search_str %>
  <h1>Detail Package Listing for <%= @search_str %></h1>
<%- else -%>
  <h1>Detail Package Listing</h1>
<%- end -%>
<div id="search_box" style="text-align:right">
  <%= render :partial => 'shared/search_box', :locals => { :objects => @packages } %>
</div>
<div id="results_table">
<%- if @packages.size > 0 -%>
  <%= will_paginate @packages %>
  <table cellspacing="0" class="styled">
  <thead>
  <%= render :partial => 'detail_index_header' %>
  </thead>
  <tbody>
  <%= render :partial => 'detail_index_row', :collection => @packages, :as => :item  %>
  </tbody>
  </table>
<%- else -%>
  No data
<%- end -%>
</div>
